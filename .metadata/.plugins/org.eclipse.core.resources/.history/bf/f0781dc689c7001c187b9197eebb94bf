package Chap04;

public class CastTest2 {

	public static void main(String[] args) {
		Car car = new Car();
		Car car2 = null;
		FireEngine fe = null;
		
		car.drive();
		if(car instanceof FireEngine) {
			fe = (FireEngine)car;
			fe.water();
			car2 = fe;
		}else {
			car2 = car;
			car2.drive();
		}
		
		fe = (FireEngine)car;
		fe.drive();
		car2 = fe;
		car2.drive();

	}

}
