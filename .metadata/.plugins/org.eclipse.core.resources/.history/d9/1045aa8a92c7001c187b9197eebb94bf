package Chap06;

public class Buyer {
	int money = 1000;
	int bonusPoint = 0;
	
	void buy(Pruduct p) {
		if(money < t.price) {
			System.out.println("잔액이 부족하여 구입불가");
			return;	
		}
		
		money = money - t.price;
		bonusPoint = bonusPoint + t.bonusPoint;
		System.out.println(t+"을/를 구입했습니다.");
	}

}
