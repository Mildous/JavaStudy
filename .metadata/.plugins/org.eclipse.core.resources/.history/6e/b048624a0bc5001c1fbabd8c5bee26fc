package Task01;

public class Person {
	
	String name;
	String num;
	String birth;
	
	public String getName() {
		return name;
	}


	public void setName(String name) {
		this.name = name;
	}


	public String getNum() {
		return num;
	}


	public void setNum(String num) {
		this.num = num;
	}

	public String setBirth() {
		this.birth = birth;
	}
	
	public String getBirth() {
		return birth;
	}

	public void showPerson() {
		System.out.printf("이름: %s, 전화번호: %s"+(birth != null && !"".equals(birth) ? ", 생일: %s" : ""), name, num, birth);
	}

}
	
	