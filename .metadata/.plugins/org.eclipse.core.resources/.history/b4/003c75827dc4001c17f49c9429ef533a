package Task01;

public class Person {
	
	private String name;
	private int num;
	private String birth;
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public int getNum() {
		return num;
	}
	public void setNum(int num) {
		this.num = num;
	}
	public String getBirth() {
		if("".equals(birth)||birth==null)
		return birth;
		return birth;
	}
	public void setBirth(String birth) {
		this.birth = birth;
		
	}
	
	public void showPerson() {
		System.out.printf("이름: %s%n전화번호: %d%n생일: %s", name, num, birth);
	}
	

}
