package Task01;

public class Person {
	
	private String name;
	private String num;
	private String birth;
	
	public String getName() {
		return name;
	}
	public void setName(String name) {
		this.name = name;
	}
	public String getNum() {
		return num;
	}
	public void setNum(String num) {
		this.num = num;
	}
	public String getBirth() {
		return birth;
	}
	public void setBirth(String birth) {
		if(equals(birth) || birth==null) return;
		this.birth = birth;
	}
	public void showPerson() {
		System.out.printf("이름: %s, 전화번호: %s, 생일: %s%n", name, num, birth);
	}
}
