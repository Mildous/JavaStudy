package Chap06;

public class Buyer {
	int money = 1000;
	int bonusPoint = 0;
	Product[] item = new Product[10];
	
	void buy(Product p) {
		if(money < p.price) {
			System.out.println("잔액이 부족하여 구입불가");
			return;	
		}
		
		money = money - p.price;
		bonusPoint = bonusPoint + p.bonusPoint;
		System.out.println(p+"을/를 구입했습니다.");
	}

}
